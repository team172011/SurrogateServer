<base:ModuleView 
    x:Class="Surrogate.View.ConnectionsChecker.ConnectionsCheckerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Surrogate.View">
    <StackPanel DockPanel.Dock="Right" Margin="5">
        <StackPanel.Resources>
            <Style TargetType="ListViewItem">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </StackPanel.Resources>
        <ListView x:Name="lvConnections"
                  ItemsSource="{Binding Path=connections}">
        </ListView>
    </StackPanel>
</base:ModuleView>