<base:ModuleViewBase 
    x:Class="Surrogate.View.ControllerTestView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:Surrogate.View">

    <StackPanel Background="AliceBlue">
        <TextBlock FontSize="30" TextWrapping="Wrap" Text="Starten Sie den Test um den über Bluetooth angeschlossenene Controller zu testen"/>
        <Button x:Name="btnController" Height="50" Click="TestControllerOutput" Content="Controller Outputs testen "/>
        <Button x:Name="btnTestMotor" Height="50" Click="TestMotorOutput" Content="Motor Outputs testen "/>
        <Button x:Name="btnControllRobot" Height="50" Click="ControllRobot" Content="Roboter Steuern"/>
        <Button x:Name="btnStop" Height="50" Click="StopTest" Content="Test Beenden" IsEnabled="false"/>
    </StackPanel>
</base:ModuleViewBase>
