<base:ModuleViewBase x:Class="Surrogate.View.MotorTestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:base="clr-namespace:Surrogate.View">

    <StackPanel Background="AliceBlue">
        <Label Content="Wählen Sie die gewünschte Aktion"/>
        <DockPanel>
            <Button Width="auto" DockPanel.Dock="Top" Click="Forwards" Content="Vorwärts"/>
            <Button Width="auto" DockPanel.Dock="Bottom" Click="Backwards" Content="Rückwärts"/>
            <StackPanel  DockPanel.Dock="Left">
                <Button Width="auto" Click="Left" Content="Links"/>
                <Button Width="auto" Click="OnlyLeft" Content="Nur Links"/>
            </StackPanel>
            <StackPanel  DockPanel.Dock="Right">
                <Button Width="auto" Click="Right" Content="Rechts"/>
                <Button Width="auto" Click="OnlyRight" Content="Nur Rechts"/>
            </StackPanel>

            <Button Width="72"  Click="StopTest" Content="Anhalten"/>
        </DockPanel>
    </StackPanel>
</base:ModuleViewBase>
