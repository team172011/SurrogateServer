<UserControl x:Class="Surrogate.View.ControllerTestView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Background="AliceBlue">
        <Label Content="Starten Sie den Test um den über Bluetooth angeschlossenene Controller zu testen"/>
        <Button x:Name="btnController" Click="TestControllerOutput" Content="Controller Outputs testen "/>
        <Button x:Name="btnTestMotor" Click="TestMotorOutput" Content="Motor Outputs testen "/>
        <Button x:Name="btnControllRobot" Click="ControllRobot" Content="Roboter Steuern"/>
        <Button x:Name="btnStop" Click="StopTest" Content="Test Beenden" IsEnabled="false"/>
    </StackPanel>
</UserControl>
